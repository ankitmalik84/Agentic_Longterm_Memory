# Dockerfile for Notion Server V2
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file for serverV2
COPY docker/requirements-serverV2.txt ./requirements-serverV2.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-serverV2.txt

# Copy source code
COPY src/notion_mcp_server/api_server.py ./src/notion_mcp_server/api_server.py
COPY src/notion_mcp_server/serverV2.py ./src/notion_mcp_server/serverV2.py

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV HOST=0.0.0.0
ENV PORT=8081

# Expose port for HTTP API
EXPOSE 8081

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8081/health || exit 1

# Run the API server (FastAPI)
CMD ["python", "-m", "src.notion_mcp_server.api_server"] 